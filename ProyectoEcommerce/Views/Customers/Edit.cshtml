@model ProyectoEcommerce.Models.Customer
@{
    ViewData["Title"] = "Editar mis datos";
}
<h1 class="mb-3">@ViewData["Title"]</h1>

<form asp-controller="Customers" asp-action="EditarPerfil" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="CustomerId" />

    <div class="col-md-6">
        <label asp-for="Name_full" class="form-label"></label>
        <input asp-for="Name_full" class="form-control" placeholder="Ej.: Ana María López" autocomplete="name" />
        <span asp-validation-for="Name_full" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Telefono" class="form-label"></label>
        <input asp-for="Telefono" class="form-control" inputmode="tel" autocomplete="tel" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Direccion" class="form-label"></label>
        <input asp-for="Direccion" class="form-control" autocomplete="street-address" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
        <small class="text-muted">El email se gestiona desde Mi Cuenta (Identity).</small>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Perfil" class="btn btn-outline-secondary ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
