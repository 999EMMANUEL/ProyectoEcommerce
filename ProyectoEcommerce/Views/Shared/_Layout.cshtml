<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoEcommerce</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Accessibility.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <div class="header-top">
            <!-- Razor view: Anchor Tag Helper genera el href automáticamente -->
            <a asp-controller="Home" asp-action="Index" class="logo">
                <img src="https://i.postimg.cc/K8Kyg8yD/Imagen1.png"
                     width="320" height="100" alt="logo" style="display:block;" />
            </a>

            <div class="search-container">
                <input type="text" class="search-bar" placeholder="Buscar productos...">
                <button class="search-btn">Buscar</button>
            </div>

            <div class="header-actions">
                <a href="#" class="header-btn">Mi Cuenta</a>
                <a href="#" class="header-btn">Favoritos</a>
                <a href="#" class="header-btn">Carrito <span class="cart-badge">3</span></a>
            </div>
        </div>

        <nav class="navigation">
            <div class="nav-container">
                <div class="categories-dropdown">
                    <button class="categories-btn">
                        Categorías
                    </button>
                    <div class="dropdown-content">
                        <a href="#">Computadoras</a>
                        <a href="#">Smartphones</a>
                        <a href="#">Audio</a>
                        <a href="#">TV & Video</a>
                        <a href="#">Gaming</a>
                        <a href="#">Laptops</a>
                        <a href="#">Wearables</a>
                        <a href="#">Accesorios</a>
                    </div>

                </div>

                <div class="nav-links">
                    <a class="nav-link" asp-area="" asp-controller="AboutUs" asp-action="Index">Sobre Nosotros</a>
                    <a href="#" class="nav-link">Preguntas Frecuentes</a>
                    <a href="#" class="nav-link">Promociones</a>
                    <a class="nav-link" asp-area="" asp-controller="Contacts" asp-action="Index">Contactenos</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="footer-content">
                <p>
                    &copy; 2025 - ProyectoEcommerce -
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Politicas y privacidad</a> |
                    <a asp-area="" asp-controller="Home" asp-action="LegalInformation">Informacion legal</a> |
                    <a asp-area="" asp-controller="Home" asp-action="SocialMedia">Redes sociales</a>
                </p>
            </div>
        </div>

        <!-- Botón flotante de accesibilidad -->
        <button class="accessibility-btn" onclick="toggleAccessibilityPanel()">
           accsesibilidad
        </button>

        <!-- Panel de opciones -->
        <div class="accessibility-panel" id="accessibilityPanel">
            <div class="accessibility-options" id="accessibilityOptions">
                <div class="option-group">
                    <h4>Tamaño de texto</h4>
                    <div class="btn-group">
                        <button id="font-small" class="font-size-btn">A-</button>
                        <button id="font-normal" class="font-size-btn active">A</button>
                        <button id="font-large" class="font-size-btn">A+</button>
                        <button id="font-xlarge" class="font-size-btn">A++</button>
                    </div>
                </div>

                <div class="option-group">
                    <h4>Contraste</h4>
                    <div class="btn-group">
                        <button id="contrast-normal" class="contrast-btn active">Normal</button>
                        <button id="contrast-high" class="contrast-btn">Alto</button>
                        <button id="contrast-inverted" class="contrast-btn">Invertido</button>
                    </div>
                </div>

                <div class="option-group">
                    <button id="reset-accessibility" class="btn btn-sm btn-outline-secondary">
                        Restablecer
                    </button>
                </div>
            </div>
        </div>

        <script>
            function toggleAccessibilityPanel() {
                const panel = document.getElementById('accessibilityOptions');
                panel.classList.toggle('show');
            }
        </script>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Accessibility.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
