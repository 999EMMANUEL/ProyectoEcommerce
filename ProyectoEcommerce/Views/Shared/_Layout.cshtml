<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoEcommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header>
        <div class="header-top">
            <!-- Razor view: Anchor Tag Helper genera el href automáticamente -->
            <a asp-controller="Home" asp-action="Index" class="logo">
                <img src="https://i.postimg.cc/K8Kyg8yD/Imagen1.png"
                     width="320" height="100" alt="logo" style="display:block;" />
            </a>

            <div class="search-container">
                <input type="text" class="search-bar" placeholder="Buscar productos...">
                <button class="search-btn">Buscar</button>
            </div>

            <div class="header-actions">
                <a href="#" class="header-btn">Mi Cuenta</a>
                <a href="#" class="header-btn">Favoritos</a>
                <a href="#" class="header-btn">Carrito <span class="cart-badge">3</span></a>
            </div>
        </div>

        <nav class="navigation">
            <div class="nav-container">
                <div class="categories-dropdown">
                    <button class="categories-btn">
                        Categorías
                    </button>
                    <div class="dropdown-content">
                        <a href="#">Computadoras</a>
                        <a href="#">Smartphones</a>
                        <a href="#">Audio</a>
                        <a href="#">TV & Video</a>
                        <a href="#">Gaming</a>
                        <a href="#">Laptops</a>
                        <a href="#">Wearables</a>
                        <a href="#">Accesorios</a>
                    </div>
                </div>

                <div class="nav-links">
                    <a href="#" class="nav-link">Sobre Nosotros</a>
                    <a href="#" class="nav-link">Preguntas Frecuentes</a>
                    <a href="#" class="nav-link">Promociones</a>
                    <a href="#" class="nav-link">Destacados</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProyectoEcommerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Productos</a>
        </li>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
